<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p>
        <%= start %>
    </p>

    <% posts.forEach((post)=> { %>

        <h1>
            <%= post.title %>
        </h1>
        <p>
            <% const words=post.message.split(' '); %>
            <% const shortenedMessage = words.slice(0, 25).join(' '); %>
            <%= shortenedMessage + "....."  %>
            <a href="/posts/<%= post.title %>">Read more</a>
        </p>
        

    <% }) %>



<%- include("partials/footer"); -%>
